<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/recycler_row_border"
    android:orientation="horizontal"
    android:padding="10dp">

    <TextView
        android:id="@+id/text_value_sensitivity"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:foregroundGravity="center_vertical"
        android:gravity="center_vertical"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:textColor="@color/primary"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/text_type_sensitivity"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:foregroundGravity="center_vertical"
        android:gravity="center_vertical"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:textColor="@color/primary"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/sensitivity_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:visibility="visible"
        app:srcCompat="@drawable/ic_heart_dark_with_red_circle"
        tools:visibility="visible"
        android:contentDescription="@string/sensitivity_icon" />

</LinearLayout>